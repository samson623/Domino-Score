{
  "builds": [
    { "src": "api/**/*.ts", "use": "@vercel/node" },
    { "src": "index.html", "use": "@vercel/static" },
    { "src": "public/**", "use": "@vercel/static" }
  ],
  "routes": [
    { "handle": "filesystem" },
    { "src": "/login", "dest": "/public/login.html" },
    { "src": "/login.html", "dest": "/public/login.html" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
